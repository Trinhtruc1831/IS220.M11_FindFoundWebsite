    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript">
        @* For interest of user *@
        $(document).ready(function () {
            $('#buttonDemo4').click(function () {
                $.ajax({
                    type: 'GET',
                    url: '/account/GetPostUserJson',
                    success: function (result) {
                        var s = '<tr><th> Date </th><th> Title </th><th></th></tr>';
                        for (var i = 0; i < result.length; i++) {
                            s += '<tr>';
                            s += '<td>' + result[i].date + '</td>';
                            s += '<td>' + result[i].tit + '</td>';
                            s += '<td> <a href="#"" > Details</a > | <a href="#"> Delete</a ></td>';
                            s += '</tr>'

                        }
                        $('#customers').html(s);
                    }
                });
            });

        });
    @*For post of user*@
        $(document).ready(function () {
            $('#buttonDemo3').click(function () {
                $.ajax({
                    type: 'GET',
                    url: '/account/GetPostInterstJson',
                    success: function (result) {
                        var s = '<tr><th> Date </th><th> Title </th><th></th></tr>';
                        for (var i = 0; i < result.length; i++) {
                            s += '<tr>';
                            s += '<td>' + result[i].date + '</td>';
                            s += '<td>' + result[i].tit + '</td>';
                            s += '<td> <a a href="#">Edit</a> | <a href="#"" > Details</a > | <a href="#"> Delete</a ></td>';
                            s += '</tr>'

                        }
                        $('#customers').html(s);
                    }
                });
            });

        });
        @* Default post of user *@
        $(document).ready(function () {
            $.ajax({
                type: 'GET',
                url: '/account/GetPostUserJson',
                success: function (result) {
                    var s = '<tr><th> Date </th><th> Title </th><th></th></tr>';
                    for (var i = 0; i < result.length; i++) {
                        s += '<tr>';
                        s += '<td>' + result[i].date + '</td>';
                        s += '<td>' + result[i].tit + '</td>';
                        s += '<td> <a a href="#">Edit</a> | <a href="#"" > Details</a > | <a href="#"> Delete</a ></td>';
                        s += '</tr>'

                    }
                    $('#customers').html(s);
                }
            });

        });
    </script>
</head>
<body style=" background: url('/public/assets/img/test.png') no-repeat center center fixed; background-size: cover">
    <!-- Navigation-->
    <!-- Masthead header-->
    <!-- Music Section-->


    <div class="container">
        <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" href="#page-top"><img src="~/public/assets/img/pagetop.png" alt="logo" title="Logo"></a>
                <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="@Url.Action("UserIndex", "Home")" id="userInput">@usn</a></li>
                        <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#about" id="about">About</a></li>
                        <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#donate">Donate</a></li>
                        <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="@Url.Action("Logout", "account")">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <section class="page-section" style="margin: 5% 5%;">
        <div class="row" style="margin-right: 0rem; margin-left: 0rem;">
            <div style="width: 280px">
                <p style="margin-bottom: 7px; margin-top: 10px; padding: 2px 10px; background-color: #ead5b5; font-weight: bold; color: #705637; border-radius: 8px; font-size: 100%">User profile</p>
                <div style="border: solid; border-color: #886e4b ; height: 25rem; border-radius: 8px">
                    <div class="card h-460px" style="width: 98%; border-radius: 8px;margin: 1% 1%;">
                        @foreach (object item in Model.Accounts)
                        {

                            string status = "";
                            if (@item.GetType().GetProperty("status").GetValue(item, null).ToString().Equals(1))
                            {
                                status = "Alive";
                            }
                            else
                            {
                                status = "Banned";
                            }
                            <!-- Product image-->
                            <img class="card-img-top" src="@item.GetType().GetProperty("ava").GetValue(item, null)" alt="..." />
                            <!-- Product details-->
                            <div class="text-center" style="margin-top: 7%; margin-bottom: 2%; margin-left: 2%; margin-right: 2%; ">
                                <!-- Product name-->
                                <h5 style="background-color: #ead5b5; height: 35px; font-weight: bold; color: #705637; border-radius: 8px; ">@item.GetType().GetProperty("name").GetValue(item, null)</h5>
                                <!-- Product price-->
                            </div>
                            <!-- Product actions-->
                            <div>
                                <p style="margin: 1% 2%; padding: 0% 2%; background-color: #ead5b5; font-weight: bold; color: #886e4b; border-radius: 8px; font-size: 60%">Email: @item.GetType().GetProperty("email").GetValue(item, null)</p>
                                <p style="margin: 1% 2%; padding: 0% 2%; background-color: #ead5b5; font-weight: bold; color: #886e4b; border-radius: 8px; font-size: 60%">Phone: @item.GetType().GetProperty("phone").GetValue(item, null)</p>
                                <p style="margin: 1% 2%; padding: 0% 2%; background-color: #ead5b5; font-weight: bold; color: #886e4b; border-radius: 8px; font-size: 60%">Status: @status</p>
                            </div>
                        }
                        <form asp-action="EditInfo" asp-controller="account"  style="text-align: center !important ;height:30px;margin: 5% 2%; padding: 2% 2%;background-color: #a88a64;font-weight: bold;border-radius: 8px; font-size: 80%;">
                            <input style=" color: #f5f3f3ef; font-weight: bold" type="submit" value="Edit Info">
                        </form>

                    </div>

                </div>
            </div>
            <div style="width: 1000px; margin-left: 15px">
                <div class="row">
                    <p style="margin-left: 30px;margin-bottom: 7px; margin-top: 10px; padding: 2px 10px; background-color: #ead5b5; font-weight: bold; color: #705637; border-radius: 8px; font-size: 100%"><a href="javascript:void(0)" id="buttonDemo4" style="color: #705637 !important">My post</a></p>
                    <p style="margin-left: 3px;margin-bottom: 7px; margin-top: 10px; padding: 2px 10px; background-color: #ead5b5; font-weight: bold; color: #705637; border-radius: 8px; font-size: 100%"><a href="javascript:void(0)" id="buttonDemo3" style="color: #705637 !important">Interest</a></p>
                </div>

                <style>
                    #customers {
                        font-family: Arial, Helvetica, sans-serif;
                        border-collapse: collapse;
                        width: 100%;
                    }

                        #customers td, #customers th {
                            border: 1px solid #ddd;
                            padding: 8px;
                        }


                        #customers tr:nth-child(even) {
                            background-color: #e7e3d4;
                        }

                        #customers tr:hover {
                            background-color: #ddd;
                        }

                        #customers th {
                            padding-top: 12px;
                            padding-bottom: 12px;
                            text-align: left;
                            background-color: #A88A64;
                            color: white;
                        }

                        #customers td {
                            color: #49371f;
                        }
                </style>
                <div style="border: solid; border-color: #886e4b ; height: 25rem; border-radius: 8px">
                    <div  class="card h-460px" style="width: 98%; border-radius: 8px;margin: 1% 1%;">
                        <table class="table" id="customers">
                            
                        </table>

                    </div>

                </div>
            </div>
            </div>
</section>
    <!-- Donate Section-->
    <section class="page-section" id="donate">
        <div class="container">
            <!-- Donate Section Heading-->
            <h2 class=" text-center text-secondary mb-0" style="font-size: 1.5rem;">Buy us a coffee ☕</h2>
            <!-- Icon Divider-->
            <br>
            <br>
            <img src="/public/assets/img/donate.png" alt="Girl in a jacket" style="width:100px;" class="center">
